/* plugin/components/ui/areaPicker/areaPicker.wxss */
.u-picker {
  height: 220px;
  overflow-y: auto;
}

.hide {
  display: none;
}

.u-item {
  padding-left: 15px;
  height: 44px;
  line-height: 44px;
  display: block;
  border-bottom: solid 1px #E5E5E5;
}

.touchstart {
  background: #F7F7F7;
}

.success_icon {
  float: right;
  padding-top: 6px;
  padding-right: 15px;
}
@media screen and (orientation: landscape){
  .u-picker {
    max-height: 135px;
  }
}