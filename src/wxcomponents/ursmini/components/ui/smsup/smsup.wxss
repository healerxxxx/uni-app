.u-button {
  height: 47px;
  line-height: 47px;
  background-color: #000;
  color: #fff;
  text-align: center;
  display: block;
  border-radius: 3px;
  font-size: 18px;
  width: 100%;
  padding:0;
}

.smsup-copy {
  float: right;
  color: #2c82ff;
}

.smsup-box .smsup-g-wrapper {
  margin: 0 auto;
}

.smsup-box .smsup-g-wrapper .smsup-u-tip {
  font-size: 14px;
  color: #666;
  line-height: 14px;
}

.smsup-box .smsup-g-wrapper .smsup-u-tip.error {
  font-size: 12px;
  color: red;
  padding-bottom: 6px;
}

.smsup-box .smsup-g-wrapper .smsup-u-tip .smsup-s-fc7 {
  color: #333;
  font-weight: bolder;
}

.smsup-box .smsup-g-wrapper .smsup-u-tip .smsup-s-change {
  width: 87px;
  display: inline-block;
  font-size: 14px;
  height: 25px;
  line-height: 22px;
  margin-left: 8px;
  color: #2c82ff;
  border: 1px solid #2c82ff;
  background: #fff;
  text-align: center;
  border-radius: 2px;
  box-sizing: border-box;
  position: relative;
  cursor: pointer;
}

.smsup-box .smsup-g-wrapper .smsup-tip0 {
  padding: 0 0 30px;
}

.smsup-box .smsup-g-wrapper .smsup-tip1 {
  padding: 0 0 11px;
  color: #333;
  font-weight: bolder;
}

.smsup-box .smsup-g-wrapper .smsup-tip2 {
  padding: 10px 0 40px;
  color: #999;
}

.smsup-box .smsup-g-wrapper .smsup-info-box {
  background: #f7f7f7;
  width: 440px;
  height: 60px;
  line-height: 60px;
  font-size: 16px;
  padding: 0 20px;
}

.smsup-box .smsup-g-wrapper .smsup-info-box .smsup-item {
  display: inline-block;
  padding: 0 15px;
}

.smsup-box .smsup-g-wrapper .smsup-info-box .smsup-info {
  color: #333;
  font-weight: bolder;
}

.smsup-box .smsup-g-wrapper .smsup-auto-sms {
  display: none;
}

.smsup-box .smsup-g-wrapper .smsup-m-result-btn-box {
  height: 48px;
  font-size: 18px;
  line-height: 48px;
  text-align: center;
}

.smsup-box .smsup-g-wrapper .smsup-m-result-btn-box a {
  display: block;
  color: #fff;
  background: #2c80ff;
}

.smsup-box .smsup-g-wrapper .smsup-btn-primary {
  margin-top: 20px;
  background: #fff;
  border: 1px solid #2c80ff;
  color: #2c80ff;
}

.smsup-box .smsup-g-wrapper .smsup-btn-primary:disabled {
  opacity: 1;
}

.smsup-box .smsup-g-wrapper .smsup-btn-primary .bButton-loading {
  margin-top: 0;
}

.smsup-box .smsup-g-wrapper .smsup-btn-primary .bButton-loading .icon_svg {
  width: 42px;
  height: 42px;
}

.smsup-box .smsup-g-wrapper .smsup-btn-primary .bButton-loading .icon_svg svg {
  color: #fff;
  width: 32px;
  height: 32px;
}

.smsup-box {
  font-size: 17px;
  margin: 0 15px;
  padding-right: 16px;
  display: flex;
  align-items: center;
  border-radius: 3px;
  position: relative;
}

.smsup-box .smsup-g-wrapper .smsup-tip0 {
  padding: 10px 0;
}

.smsup-box .smsup-g-wrapper .smsup-tip1 {
  padding: 10px 0;
  color: #666;
  font-weight: 400;
}

.smsup-box .smsup-g-wrapper .smsup-tip2, .smsup-box .smsup-g-wrapper .smsup-tip3 {
  padding: 20px 0 40px;
  color: #666;
}

.smsup-box .smsup-g-wrapper .smsup-info-box {
  color: #333;
  padding: 0;
  background: #fff;
  border: 1px solid #efefef;
  border-bottom: 0;
  height: auto;
  line-height: normal;
  width: 100%;
}

.smsup-box .smsup-g-wrapper .smsup-info-box .smsup-item {
  display: block;
  height: 43px;
  line-height: 43px;
  font-size: 14px;
  border-bottom: 1px solid #e6e6e6;
}

.smsup-box .smsup-g-wrapper .smsup-auto-sms {
  display: block;
}

.smsup-box .smsup-g-wrapper .btn-primary {
  margin-top: 0;
}

.smsup-box .smsup-g-wrapper .btn-primary button {
  background: #fff;
  border: 1px solid #2c80ff;
  color: #2c80ff;
}

.smsup-box .smsup-g-wrapper .btn-primary button:disabled {
  background: #fff;
}
