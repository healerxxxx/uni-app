/* plugin/components/ui/imgCap/imgCap.wxss */
.hidden {
  display: none;
}

.m-pop {
  background: rgba(0, 0, 0, 0.6);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.popcnt {
  height: 130px;
  position: absolute;
  top: 40%;
  left: 50%;
  background: #fff;
  margin: 0 auto 0 -40%;
  border-radius: 3px;
  width:80%;
}

.title {
  height: 21px;
  line-height: 21px;
  font-size: 15px;
  padding: 13px 17px;
  color: #666;
  border-bottom: solid 1px #ccc;
}

.cap-box {
  padding: 20px 17px;
  position: relative;
  font-size: 17px;
  background: #fff;
  border-radius: 3px;
}

.capInput {
  font-size: 17px;
  background: #F7F7F7;
  display: flex;
  align-items: center;
  border-radius: 3px;
  padding: 0 12px;
}

.img {
  width: 85px;
  height: 45px;
  position: absolute;
  right: 17px;
  top: 20px;
  border-radius: 3px;
  z-index: 999;
}

.imgalt {
  position: absolute;
  top: 30px;
  right: 34px;
  font-size: 14px;
}

.u-input {
  height: 45px;
  line-height: 45px;
  border: 0;
  width: 100%;
}

.u-icon {
  display: inline-block;
  width: 14px;
  height: 14px;
}

.phcolor {
  color: #B2B2B2;
}

.left {
  padding-right: 95px;
}

.close {
  float: right;
  font-size: 18px;
}

.close {
  position: relative;
  width: 18px;
  height: 18px;
  display: inline-block;
  cursor: pointer;
}

.close::before {
  content: '';
  width: inherit;
  border-top: 1px solid #666;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
}

.close::after {
  content: '';
  width: inherit;
  border-top: 1px solid #666;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
}


@media screen and (orientation: landscape){
  .popcnt {
    left: 50%;
    margin: 0 auto 0 -30%;
    width:60%;
  }
}
