/* plugin/components/ui/confirm/confirm.wxss */
.m-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: rgba(100, 100, 100, 0.7);
}

.m-pop {
  width: 80%;
  position: absolute;
  margin: 0 auto;
  top: 50%;
  left: 50%;
  margin-left: -40%;
  margin-top: -10%;
  border-radius: 3px;
  background: #fcfcfc;
  font-size: 15px;
}

.pop-info {
  display: block;
  padding: 14px 28px 63px;
  text-align: center;
  line-height: 20px;
  color: #000;
  -webkit-user-select: initial;
  user-select: initial;
}

.pop-btn {
  position: absolute;
  display: block;
  width: 100%;
  padding: 14px 0 20px 0;
  bottom: 0;
  text-align: center;
  border-top: solid 1px #ccc;
  color: #0095ff;
}

.pop-btn.left {
  left: 0;
  width: 50%;
  border-right: solid 1px #ccc;
  color: #666;
}

.pop-btn.right {
  right: 0;
  width: 50%;
}
