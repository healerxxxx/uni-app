.g-bd {
    height: 100%;
}

.hidden {
    display: none;
}

.show {
    display: block;
}

.layer {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: transparent;
    z-index: 9999;
}

.m-logo {
    display: table;
    vertical-align: middle;
    text-align: center;
    width: 100%;
    padding: 40px 0;
}

.u-logo {
    width: 167px;
    height: 31px;
    margin: 0 auto;
}
.u-button {
    height: 47px;
    line-height: 47px;
    background-color: #000;
    color: #fff;
    text-align: center;
    margin: 0 25px;
    display: block;
    border-radius: 3px;
    font-size: 18px;
}
.m-errbox {
    font-size: 17px;
    margin: 0 25px;
    line-height: 24px;
    color: #EE5D67;
    min-height: 65px;
    padding: 6px 0 11px 0;
}
@media screen and (orientation: landscape){
    .g-bd{
        margin:0 auto;
        height: 100%;
    }
    .g-bd-inner {
        width:400px;
        margin:0 auto;
        height: 100%;
    }
    
    .m-errbox {
        min-height: 0;
    }
    .m-logo{
        margin:0 auto;
        padding: 17px 0;
    }
}